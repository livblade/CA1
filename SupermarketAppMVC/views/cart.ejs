<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Shopping Cart - Ethan's Grains</title>
</head>
<body>
  <!-- Navigation bar -->
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <!-- Dark mode toggle button -->
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Page header -->
    <div class="page-header">
      <h2>Shopping Cart</h2>
    </div>

    <!-- Check if cart is empty -->
    <% if (!cart || cart.length === 0) { %>
      <!-- Empty cart message -->
      <div style="text-align: center; padding: 3rem; background: white; border-radius: 0.75rem;">
        <p style="font-size: 1.25rem; color: #6b7280;">Your cart is empty.</p>
        <a href="/shopping" class="btn btn-success mt-3">Start Shopping</a>
      </div>
    <% } else { %>
      <!-- Cart items table -->
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Item</th>
              <th>Image</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Line Total</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Loop through cart items -->
            <% cart.forEach(function(item) { %>
              <tr>
                <!-- Product name -->
                <td><strong><%= item.productName %></strong></td>
                
                <!-- Product image -->
                <td>
                  <% if (item.image) { %>
                    <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="product-img" style="height:60px;">
                  <% } %>
                </td>
                
                <!-- Unit price -->
                <td><strong>$<%= (parseFloat(item.price) || 0).toFixed(2) %></strong></td>
                
                <!-- Quantity update form with dropdown -->
                <td>
                  <form method="post" action="/cart/update" style="display:inline-block;">
                    <input type="hidden" name="productId" value="<%= item.productId %>">
                    <select name="quantity" class="form-select" style="width: 100px; display: inline-block;" 
                            onchange="this.form.submit()">
                      <% 
                        // Current quantity in cart
                        const currentQty = parseInt(item.quantity,10) || 0;
                        // Show options from 1 to max(10, currentQty), capped at 50
                        const maxOption = Math.min(Math.max(10, currentQty), 50);
                        for (let q = 1; q <= maxOption; q++) { 
                      %>
                        <option value="<%= q %>" <%= (currentQty === q) ? 'selected' : '' %>><%= q %></option>
                      <% } %>
                      <!-- If quantity exceeds cap, add exact value -->
                      <% if (currentQty > maxOption) { %>
                        <option value="<%= currentQty %>" selected><%= currentQty %></option>
                      <% } %>
                    </select>
                  </form>
                </td>
                
                <!-- Line total (price √ó quantity) -->
                <td><strong>$<%= ((parseFloat(item.price) || 0) * (parseInt(item.quantity,10) || 0)).toFixed(2) %></strong></td>
                
                <!-- Remove item button -->
                <td>
                  <form method="post" action="/cart/remove/<%= item.productId %>" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Cart summary section with gradient background -->
      <div class="cart-summary">
        <!-- Cart total -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h3 style="color: #1e40af; margin: 0;">Cart Total:</h3>
          <span class="cart-total">$<%= (typeof total !== 'undefined' ? total.toFixed(2) : (cart.reduce((s,i)=> s + ((parseFloat(i.price)||0)*(parseInt(i.quantity,10)||0)),0)).toFixed(2)) %></span>
        </div>

        <!-- Action buttons -->
        <div class="d-flex gap-2 justify-content-end">
          <!-- Clear cart button - removes all items -->
          <form method="post" action="/cart/clear" style="display:inline;">
            <button type="submit" class="btn btn-outline-primary" onclick="return confirm('Clear entire cart?')">Clear Cart</button>
          </form>

          <!-- Continue shopping link -->
          <a href="/shopping" class="btn btn-primary">Continue Shopping</a>

          <!-- Checkout button - proceeds to order creation -->
          <form method="post" action="/checkout" style="display:inline;">
            <button type="submit" class="btn btn-success">Proceed to Checkout</button>
          </form>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Dark mode theme manager -->
  <script src="/js/theme.js"></script>
</body>
</html>
