<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>All Orders - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Admin: <strong><%= user.username %></strong></p>
    </div>

    <div class="page-header">
      <h2>All Customer Orders</h2>
    </div>

    <% if (!orders || orders.length === 0) { %>
      <div style="text-align: center; padding: 3rem; background: white; border-radius: 0.75rem;">
        <p style="font-size: 1.25rem; color: #6b7280;">No orders have been placed yet.</p>
        <a href="/dashboard" class="btn btn-primary mt-3">Back to Dashboard</a>
      </div>
    <% } else { %>
      <div class="row">
        <% orders.forEach(function(order) { %>
          <div class="col-md-6 mb-4">
            <div class="product-card">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                  <h5 style="color: #1e40af; margin: 0;">Order #<%= order.orderId %></h5>
                  <small style="color: #6b7280;">
                    <%= new Date(order.createdAt).toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric',
                      hour: '2-digit',
                      minute: '2-digit'
                    }) %>
                  </small>
                </div>
                <span class="badge-blue" style="font-size: 1.1rem;">
                  $<%= parseFloat(order.total).toFixed(2) %>
                </span>
              </div>

              <div class="mb-3">
                <strong style="color: #1e40af;">Customer:</strong>
                <p style="margin: 0.25rem 0;"><%= order.username %> (<%= order.email %>)</p>
              </div>

              <div class="mb-3">
                <strong style="color: #1e40af;">Items:</strong>
                <ul style="margin-top: 0.5rem; padding-left: 1.5rem;">
                  <% order.items.forEach(function(item) { %>
                    <li style="margin-bottom: 0.25rem;">
                      <%= item.productName %> 
                      <span style="color: #6b7280;">
                        (Qty: <%= item.quantity %> √ó $<%= parseFloat(item.price).toFixed(2) %>)
                      </span>
                    </li>
                  <% }); %>
                </ul>
              </div>

              <div class="text-end">
                <a href="/admin/invoice/<%= order.orderId %>" class="btn btn-primary btn-sm">View Invoice</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
