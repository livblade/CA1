<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Inventory - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add Product</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <!-- Dark mode toggle button -->
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Admin: <strong><%= user.username %></strong>!</p>
    </div>

    <!-- Low Stock Alert Banner - Only shown when products have low stock -->
    <%
      // Check for low stock items (quantity < 5)
      const lowStockItems = products.filter(p => parseInt(p.quantity, 10) < 5);
    %>
    <% if (lowStockItems.length > 0) { %>
      <div class="low-stock-alert">
        <div class="low-stock-alert-icon">‚ö†Ô∏è</div>
        <div>
          <h4>Low Stock Alert!</h4>
          <p><strong><%= lowStockItems.length %></strong> product(s) running low on inventory (less than 5 units):</p>
          <ul>
            <% lowStockItems.slice(0, 5).forEach(function(item) { %>
              <li><%= item.productName %> - Only <%= item.quantity %> left</li>
            <% }); %>
            <% if (lowStockItems.length > 5) { %>
              <li>...and <%= lowStockItems.length - 5 %> more</li>
            <% } %>
          </ul>
        </div>
      </div>
    <% } %>

    <div class="page-header">
      <h2>Inventory Management</h2>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-filter-section">
      <form method="get" action="/inventory" class="mb-3">
        <div class="input-group">
          <input class="form-control" type="search" name="q" placeholder="Search inventory..." 
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-primary" type="submit">Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/inventory" class="btn btn-outline-primary">Clear</a>
          <% } %>
        </div>
      </form>

      <form method="get" action="/inventory">
        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
          <input type="hidden" name="q" value="<%= searchQuery %>">
        <% } %>
        <div class="row g-3">
          <div class="col-md-3">
            <label class="filter-label">Category</label>
            <select name="category" class="form-select">
              <option value="">All Categories</option>
              <option value="Fruit" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Fruit') ? 'selected' : '' %>>Fruit</option>
              <option value="Vegetable" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Vegetable') ? 'selected' : '' %>>Vegetable</option>
              <option value="Meat" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Meat') ? 'selected' : '' %>>Meat</option>
              <option value="Dairy" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Dairy') ? 'selected' : '' %>>Dairy</option>
              <option value="Bakery" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Bakery') ? 'selected' : '' %>>Bakery</option>
              <option value="Other" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Other') ? 'selected' : '' %>>Other</option>
            </select>
          </div>
          <div class="col-md-2">
            <label class="filter-label">Min Price</label>
            <input type="number" name="minPrice" class="form-control" placeholder="$0.00" step="0.01" min="0"
                   value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>">
          </div>
          <div class="col-md-2">
            <label class="filter-label">Max Price</label>
            <input type="number" name="maxPrice" class="form-control" placeholder="$99.99" step="0.01" min="0"
                   value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>">
          </div>
          <div class="col-md-3">
            <label class="filter-label">Sort by Price</label>
            <select name="sort" class="form-select">
              <option value="">Default</option>
              <option value="price_asc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_asc') ? 'selected' : '' %>>Low to High</option>
              <option value="price_desc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_desc') ? 'selected' : '' %>>High to Low</option>
            </select>
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Apply</button>
          </div>
        </div>
      </form>
    </div>

    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < products.length; i++) { %>
            <!-- Add low-stock-row class if quantity < 5 for visual highlighting -->
            <tr <%= (parseInt(products[i].quantity, 10) < 5) ? 'class="low-stock-row"' : '' %>>
              <td><a href="/product/<%= products[i].id %>"><%= products[i].productName %></a></td>
              <td><img src="images/<%= products[i].image %>" class="product-img" style="height:48px;"></td>
              <td><span class="category-badge"><%= products[i].category || 'N/A' %></span></td>
              <td>
                <%= products[i].quantity %>
              </td>
              <td><strong>$<%= products[i].price.toFixed(2) %></strong></td>
              <td><%= products[i].description ? (products[i].description.length > 40 ? products[i].description.substring(0,40) + '...' : products[i].description) : '' %></td>
              <td><a href="/updateProduct/<%= products[i].id %>" class="btn btn-primary btn-sm">Edit</a></td>
              <td><a href="/deleteProduct/<%= products[i].id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this product?')">Delete</a></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Dark mode theme manager -->
  <script src="/js/theme.js"></script>
</body>
</html>
