<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <!-- Add / update styles so shopping buttons and quantity input match cart look -->
  <style>
    .buy-btn {
      display: inline-block;
      background: #1E90FF;
      color: #fff;
      border: none;
      padding: 10px 14px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
      box-shadow: none;
    }
    .buy-btn.small { padding: 6px 10px; font-size: 0.95rem; border-radius: 8px; }

    /* Shared rounded quantity control (applies to number inputs and selects) */
    .qty-input, select.qty-input {
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background-color: #fff;
      border: 2px solid #cfe6ff;
      padding: 8px 10px;
      border-radius: 10px; /* rounded edges */
      min-width: 64px;
      font-size: 1rem;
      color: #111;
      outline: none;
      box-shadow: 0 0 0 4px rgba(30,144,255,0.05);
      cursor: pointer;
    }
    .qty-input:focus, select.qty-input:focus {
      border-color: #7ec0ff;
      box-shadow: 0 0 0 6px rgba(30,144,255,0.12);
    }

    /* maintain small inline form spacing */
    form.add-cart-form { display:inline-block; margin:0 6px; }

    /* Ensure table cells align vertically middle and group the input+button */
    table tr td, table tr th {
      vertical-align: middle;
    }

    /* Wrapper around quantity input + buy button to align them nicely */
    .buy-controls {
      display: inline-flex;
      align-items: center;
      gap: 8px; /* space between input and button */
      min-height: 36px; /* ensures consistent row height with buttons */
    }

    /* Make sure inputs and buttons have consistent sizing */
    .buy-controls input[type="number"],
    .buy-controls input[type="text"] {
      width: 72px;
      padding: 6px 8px;
      box-sizing: border-box;
    }

    .buy-controls .btn-buy {
      padding: 6px 12px;
      line-height: 1;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }

    /* Optional: ensure the Buy header text sits centered above controls */
    th.buy-header {
      text-align: center;
    }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/cart">View Cart</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <!-- Welcome / user area (keep this where it is in your template) -->
    <div class="welcome-area">
      <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    </div>

    <!-- moved flash messages here so they appear directly below the welcome header -->
    <% if ((messages && messages.length) || (errors && errors.length)) { %>
      <div class="flash-messages" style="margin:10px 0;">
        <% (messages || []).forEach(function(m){ %>
          <div class="alert alert-success" role="alert" style="margin-bottom:6px;"><%= m %></div>
        <% }) %>
        <% (errors || []).forEach(function(e){ %>
          <div class="alert alert-danger" role="alert" style="margin-bottom:6px;"><%= e %></div>
        <% }) %>
      </div>
    <% } %>

    <!-- NEW: Search bar for shoppers -->
    <div class="row my-3">
      <div class="col-12">
        <form class="d-flex" method="get" action="/shopping" role="search">
          <input class="form-control me-2" type="search" name="q" placeholder="Search products..." aria-label="Search"
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-outline-primary" type="submit">Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/shopping" class="btn btn-link ms-2">Clear</a>
          <% } %>
        </form>
      </div>
    </div>

    <!-- NEW: Filter and Sort Controls -->
    <div class="row my-3">
      <div class="col-12">
        <form method="get" action="/shopping" class="row g-3 align-items-end">
          <!-- preserve search query if present -->
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <input type="hidden" name="q" value="<%= searchQuery %>">
          <% } %>

          <!-- Category filter -->
          <div class="col-md-3">
            <label for="category" class="form-label">Category</label>
            <select name="category" id="category" class="form-select">
              <option value="">All</option>
              <option value="Fruit" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Fruit') ? 'selected' : '' %>>Fruit</option>
              <option value="Vegetable" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Vegetable') ? 'selected' : '' %>>Vegetable</option>
              <option value="Meat" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Meat') ? 'selected' : '' %>>Meat</option>
              <option value="Dairy" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Dairy') ? 'selected' : '' %>>Dairy</option>
              <option value="Bakery" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Bakery') ? 'selected' : '' %>>Bakery</option>
              <option value="Other" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Other') ? 'selected' : '' %>>Other</option>
            </select>
          </div>

          <!-- Price range -->
          <div class="col-md-2">
            <label for="minPrice" class="form-label">Min Price</label>
            <input type="number" name="minPrice" id="minPrice" class="form-control" placeholder="0.00" step="0.01" min="0"
                   value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>">
          </div>
          <div class="col-md-2">
            <label for="maxPrice" class="form-label">Max Price</label>
            <input type="number" name="maxPrice" id="maxPrice" class="form-control" placeholder="99.99" step="0.01" min="0"
                   value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>">
          </div>

          <!-- Sort by price -->
          <div class="col-md-3">
            <label for="sort" class="form-label">Sort by Price</label>
            <select name="sort" id="sort" class="form-select">
              <option value="">Default</option>
              <option value="price_asc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_asc') ? 'selected' : '' %>>Price: Low to High</option>
              <option value="price_desc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_desc') ? 'selected' : '' %>>Price: High to Low</option>
            </select>
          </div>

          <!-- Apply filters button -->
          <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
          </div>
        </form>
      </div>
    </div>

    <br>
    <div class="text-center"><h2>Products from Supermarket</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Product Name</th>
            <th width="100">Image</th>
            <th width="80">Category</th>
            <th width="50">Stock</th>
            <th width="50">Price</th>
            <th width="150">Description</th>
            <th style="width:120px;">Quantity</th>
            <th style="width:80px;">Buy</th>
          </tr>
      </thead>
      <tbody>
        <% products.forEach(function(product) { %>
          <tr>
            <td><a href="/product/<%= product.id %>"><%= product.productName %></a></td>
            <td>
              <% if (product.image) { %>
                <img src="/images/<%= product.image %>" alt="" style="height:32px;">
              <% } else { %>
                &nbsp;
              <% } %>
            </td>
            <td><%= product.category || 'N/A' %></td>
            <td><%= product.quantity %></td>
            <td>$<%= (parseFloat(product.price) || 0).toFixed(2) %></td>
            <td><%= product.description ? (product.description.length > 50 ? product.description.substring(0,50) + '...' : product.description) : '' %></td>

            <!-- quantity input cell -->
            <td style="vertical-align:middle; text-align:center;">
              <form action="/cart/add/<%= product.id %>" method="post" style="display:flex; align-items:center; justify-content:center; gap:6px;">
                <input type="number" name="quantity" value="1" min="1" max="<%= product.quantity %>" class="form-control" style="width:70px; display:inline-block;">
            </td>

            <!-- buy button cell -->
            <td style="vertical-align:middle; text-align:center;">
                <button type="submit" class="btn btn-primary" style="padding:6px 10px;">Buy</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Add small client-side validator to improve UX (server-side still enforces limits) -->
  <script>
    (function(){
      document.querySelectorAll('.add-cart-form').forEach(form => {
        form.addEventListener('submit', function(e){
          const input = form.querySelector('.qty-input');
          if (!input) return; // nothing to validate
          const val = parseInt(input.value, 10);
          const stock = parseInt(input.getAttribute('data-stock'), 10) || 0;
          if (Number.isNaN(val) || val <= 0) {
            e.preventDefault();
            alert('Please enter a valid quantity (1 or more).');
            input.focus();
            return;
          }
          if (val > stock) {
            e.preventDefault();
            alert('Requested quantity exceeds stock. Only ' + stock + ' available.');
            input.focus();
            return;
          }
          // otherwise allow submit
        });
      });
    })();
  </script>
</body>
</html>
