<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>Shop - Ethan's Grains</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <!-- Welcome box -->
    <div class="welcome-box">
      <p>Welcome, <strong><%= user.username %></strong>!</p>
    </div>

    <!-- Flash messages -->
    <% if ((messages && messages.length) || (errors && errors.length)) { %>
      <% (messages || []).forEach(function(m){ %>
        <div class="alert alert-success"><%= m %></div>
      <% }) %>
      <% (errors || []).forEach(function(e){ %>
        <div class="alert alert-danger"><%= e %></div>
      <% }) %>
    <% } %>

    <!-- Page header -->
    <div class="page-header">
      <h2>Shop Ethan's Products!</h2>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-filter-section">
      <!-- Search bar -->
      <form method="get" action="/shopping" class="mb-3">
        <div class="input-group">
          <input class="form-control" type="search" name="q" placeholder="Search products..." 
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-primary" type="submit">Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/shopping" class="btn btn-outline-primary">Clear</a>
          <% } %>
        </div>
      </form>

      <!-- Filters -->
      <form method="get" action="/shopping">
        <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
          <input type="hidden" name="q" value="<%= searchQuery %>">
        <% } %>
        <div class="row g-3">
          <div class="col-md-3">
            <label class="filter-label">Category</label>
            <select name="category" class="form-select">
              <option value="">All Categories</option>
              <option value="Fruit" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Fruit') ? 'selected' : '' %>>Fruit</option>
              <option value="Vegetable" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Vegetable') ? 'selected' : '' %>>Vegetable</option>
              <option value="Meat" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Meat') ? 'selected' : '' %>>Meat</option>
              <option value="Dairy" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Dairy') ? 'selected' : '' %>>Dairy</option>
              <option value="Bakery" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Bakery') ? 'selected' : '' %>>Bakery</option>
              <option value="Other" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === 'Other') ? 'selected' : '' %>>Other</option>
            </select>
          </div>
          <div class="col-md-2">
            <label class="filter-label">Min Price</label>
            <input type="number" name="minPrice" class="form-control" placeholder="$0.00" step="0.01" min="0"
                   value="<%= typeof minPrice !== 'undefined' ? minPrice : '' %>">
          </div>
          <div class="col-md-2">
            <label class="filter-label">Max Price</label>
            <input type="number" name="maxPrice" class="form-control" placeholder="$99.99" step="0.01" min="0"
                   value="<%= typeof maxPrice !== 'undefined' ? maxPrice : '' %>">
          </div>
          <div class="col-md-3">
            <label class="filter-label">Sort by Price</label>
            <select name="sort" class="form-select">
              <option value="">Default</option>
              <option value="price_asc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_asc') ? 'selected' : '' %>>Low to High</option>
              <option value="price_desc" <%= (typeof selectedSort !== 'undefined' && selectedSort === 'price_desc') ? 'selected' : '' %>>High to Low</option>
            </select>
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">Apply</button>
          </div>
        </div>
      </form>
    </div>

    <!-- Products Table -->
    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(function(product) { %>
            <tr>
              <td><a href="/product/<%= product.id %>"><%= product.productName %></a></td>
              <td>
                <% if (product.image) { %>
                  <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="product-img" style="height:48px;">
                <% } %>
              </td>
              <td><span class="category-badge"><%= product.category || 'N/A' %></span></td>
              <td><%= product.quantity %></td>
              <td><strong>$<%= (parseFloat(product.price) || 0).toFixed(2) %></strong></td>
              <td><%= product.description ? (product.description.length > 40 ? product.description.substring(0,40) + '...' : product.description) : '' %></td>
              <td>
                <form action="/cart/add/<%= product.id %>" method="post" style="display:inline;">
                  <input type="number" name="quantity" value="1" min="1" max="<%= product.quantity %>" class="qty-input">
              </td>
              <td>
                  <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
