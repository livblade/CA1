<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <!-- Add / update styles so shopping buttons and quantity input match cart look -->
  <style>
    .buy-btn {
      display: inline-block;
      background: #1E90FF;
      color: #fff;
      border: none;
      padding: 10px 14px;
      border-radius: 10px;
      font-weight: 600;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
      box-shadow: none;
    }
    .buy-btn.small { padding: 6px 10px; font-size: 0.95rem; border-radius: 8px; }

    /* Shared rounded quantity control (applies to number inputs and selects) */
    .qty-input, select.qty-input {
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background-color: #fff;
      border: 2px solid #cfe6ff;
      padding: 8px 10px;
      border-radius: 10px; /* rounded edges */
      min-width: 64px;
      font-size: 1rem;
      color: #111;
      outline: none;
      box-shadow: 0 0 0 4px rgba(30,144,255,0.05);
      cursor: pointer;
    }
    .qty-input:focus, select.qty-input:focus {
      border-color: #7ec0ff;
      box-shadow: 0 0 0 6px rgba(30,144,255,0.12);
    }

    /* maintain small inline form spacing */
    form.add-cart-form { display:inline-block; margin:0 6px; }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/cart">View Cart</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Products from Supermarket</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Product Name</th>
            <th width="100">Product Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <th width="50">Quantity</th>
            <th width="50">Buy</th>
          </tr>
      </thead>
      <tbody>
        <% products.forEach(function(product) { %>
          <tr>
            <td><a href="/product/<%= product.id %>"><%= product.productName %></a></td>
            <td><img src="/images/<%= product.image %>" width="20%"></td>
            <td><%= product.quantity %></td>
            <td>$<%= (parseFloat(product.price) || 0).toFixed(2) %></td>
            <td>
              <form method="post" action="/add-to-cart/<%= product.id %>" class="add-cart-form">
                <!-- numeric input kept but styled via .qty-input -->
                <input type="number" name="quantity" class="qty-input" value="1" min="1" step="1" style="width:96px"
                       data-stock="<%= product.quantity %>" aria-label="Quantity for <%= product.productName %>">
                <button type="submit" class="buy-btn">Buy</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- show flash error/success messages near top of shopping page -->
  <% if (typeof messages !== 'undefined' || typeof errors !== 'undefined') { %>
    <div class="flash-messages">
      <% (messages || []).forEach(function(m){ %>
        <div class="flash-success"><%= m %></div>
      <% }) %>
      <% (errors || []).forEach(function(e){ %>
        <div class="flash-error"><%= e %></div>
      <% }) %>
      <% if (typeof locals !== 'undefined' && locals && locals.flash) { /* no-op for other setups */ } %>
    </div>
  <% } %>

  <!-- Add small client-side validator to improve UX (server-side still enforces limits) -->
  <script>
    (function(){
      document.querySelectorAll('.add-cart-form').forEach(form => {
        form.addEventListener('submit', function(e){
          const input = form.querySelector('.qty-input');
          if (!input) return; // nothing to validate
          const val = parseInt(input.value, 10);
          const stock = parseInt(input.getAttribute('data-stock'), 10) || 0;
          if (Number.isNaN(val) || val <= 0) {
            e.preventDefault();
            alert('Please enter a valid quantity (1 or more).');
            input.focus();
            return;
          }
          if (val > stock) {
            e.preventDefault();
            alert('Requested quantity exceeds stock. Only ' + stock + ' available.');
            input.focus();
            return;
          }
          // otherwise allow submit
        });
      });
    })();
  </script>
</body>
</html>
