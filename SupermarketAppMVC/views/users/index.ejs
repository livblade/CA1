<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>User Management - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">ğŸª</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hidden flash messages -->
  <script id="flash-messages" type="application/json">
    {
      "success": <%- JSON.stringify(messages || []) %>,
      "errors": <%- JSON.stringify(errors || []) %>,
      "info": <%- JSON.stringify(info || []) %>
    }
  </script>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Admin: <strong><%= user.username %></strong>!</p>
    </div>

    <div class="page-header">
      <h2>User Management</h2>
    </div>

    <!-- Toast container will be inserted here by JavaScript -->

    <!-- Search Section -->
    <div class="search-filter-section">
      <form method="get" action="/users" class="mb-3">
        <div class="input-group">
          <input class="form-control" type="search" name="q" placeholder="Search users by name, email or ID..." 
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-primary" type="submit">ğŸ” Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/users" class="btn btn-outline-primary">Clear</a>
          <% } %>
        </div>
      </form>

      <!-- Add New User Button -->
      <div class="mb-3">
        <a href="/register" class="btn btn-success">â• Add New User</a>
      </div>
    </div>

    <!-- Users Grid - Card Layout -->
    <div class="row g-4">
      <% if (users && users.length > 0) { %>
        <% users.forEach(function(u) { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="product-card user-card">
              <div class="product-card-body">
                <!-- User Badge -->
                <span class="category-badge <%= u.role === 'admin' ? 'badge-admin' : 'badge-user' %>">
                  <%= u.role === 'admin' ? 'ğŸ‘‘ Admin' : 'ğŸ‘¤ User' %>
                </span>
                
                <!-- User Info -->
                <h5 class="user-card-name">
                  <a href="/users/<%= u.id %>"><%= u.username %></a>
                </h5>
                
                <p class="user-card-email">
                  ğŸ“§ <%= u.email %>
                </p>
                
                <% if (u.contact) { %>
                  <p class="user-card-detail">
                    ğŸ“ <%= u.contact %>
                  </p>
                <% } %>
                
                <% if (u.address) { %>
                  <p class="user-card-detail">
                    ğŸ“ <%= u.address.length > 50 ? u.address.substring(0,50) + '...' : u.address %>
                  </p>
                <% } %>

                <!-- User ID Info -->
                <div class="admin-info-grid" style="margin-top: 1rem;">
                  <div class="admin-info-item">
                    <span class="admin-info-label">User ID</span>
                    <span class="admin-info-value">#<%= u.id %></span>
                  </div>
                  <div class="admin-info-item">
                    <span class="admin-info-label">Status</span>
                    <span class="admin-info-value" style="font-size: 1rem; color: #10B981;">âœ“ Active</span>
                  </div>
                </div>

                <!-- User Actions -->
                <div class="admin-actions">
                  <a href="/users/<%= u.id %>" class="btn btn-primary btn-sm">
                    ğŸ‘ï¸ View
                  </a>
                  <a href="/users/edit/<%= u.id %>" class="btn btn-success btn-sm">
                    âœï¸ Edit
                  </a>
                  <% if (u.id !== user.userId && u.id !== user.id) { %>
                    <a href="/users/delete/<%= u.id %>" 
                       class="btn btn-danger btn-sm" 
                       onclick="return confirm('Delete user <%= u.username %>?')"
                       title="Delete">
                      ğŸ—‘ï¸ Delete
                    </a>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12">
          <div class="empty-state">
            <div class="empty-state-icon">ğŸ‘¥</div>
            <h3>No users found</h3>
            <p>Try adjusting your search or add a new user</p>
            <a href="/register" class="btn btn-success">Add New User</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/toast.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
