<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <title>User Management - Ethan's Grains</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <span class="brand-icon">üè™</span> Ethan's Grains
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <button id="theme-toggle" class="theme-toggle nav-link">Dark Mode</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="welcome-box">
      <p>Admin: <strong><%= user.username %></strong></p>
    </div>

    <div class="page-header">
      <h2>User Management</h2>
    </div>

    <!-- Search Section -->
    <div class="search-filter-section">
      <form method="get" action="/users" class="mb-3">
        <div class="input-group">
          <input class="form-control" type="search" name="q" placeholder="Search users by name, email, or ID..." 
                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
          <button class="btn btn-primary" type="submit">Search</button>
          <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
            <a href="/users" class="btn btn-outline-primary">Clear</a>
          <% } %>
        </div>
      </form>
    </div>

    <!-- Users Table -->
    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %>
            <% users.forEach(function(u) { %>
              <tr>
                <td><%= u.id %></td>
                <td><strong><%= u.username %></strong></td>
                <td><%= u.email %></td>
                <td>
                  <span class="<%= u.role === 'admin' ? 'badge-blue' : 'badge-green' %>">
                    <%= u.role.toUpperCase() %>
                  </span>
                </td>
                <td><%= u.contact || 'N/A' %></td>
                <td><%= u.address || 'N/A' %></td>
                <td>
                  <a href="/users/<%= u.id %>" class="btn btn-primary btn-sm">View</a>
                  <a href="/users/edit/<%= u.id %>" class="btn btn-success btn-sm">Edit</a>
                  <a href="/users/delete/<%= u.id %>" class="btn btn-danger btn-sm" 
                     onclick="return confirm('Delete this user?')">Delete</a>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No users found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="mt-3 text-center">
      <p style="color: #6b7280;">Total Users: <strong><%= users ? users.length : 0 %></strong></p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
</body>
</html>
